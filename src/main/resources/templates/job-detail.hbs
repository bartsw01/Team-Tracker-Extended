{{#partial "content"}}
   <p>Job Title:</p>
   <p>{{job.jobTitle}}</p>
   <h5>Company:</h5>
   <p> {{job.company}}</p>
   <h5>Job Description:</h5>
   <p> {{job.jobDescription}}</p>
   <h5>Company Location:</h5>
   <p> {{job.companyLocation}}</p>
   <h5>Start Date:</h5>
   <p> {{job.startDate}}</p>
   <h5>End Date:</h5>
   <p> {{job.endDate}}</p>
   <p>
       {{#if job.addedJob}}
           <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Added
       {{else}}
           <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Pending
       {{/if}}

       <a href="/jobs/{{job.id}}/update">Edit this job</a>
       <a href="/jobs/{{job.id}}/delete">DELETE this job (no undo)</a>
   </p>
{{/partial}}
{{> layout.hbs}}
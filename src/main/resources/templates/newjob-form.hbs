{{#partial "content"}}

   {{#if editPost}}
       <h1>Edit this Job!</h1>
       <form action="/jobs/{{editJob.id}}/update" method="post">
           <label for="jobTitle">Edit this job's content</label>
           <input id="jobTitle" name="jobTitle" type="text" value="{{editJob.content}}">
   {{else}}
   <h1>Add a new Job!</h1>

   <form action="/jobs/new" method="post">
       <label for="jobTitle">New Job</label>
       <input id="jobTitle" name="jobTitle" type="text">
       <label for="company">Company</label>
       <input id="company" name="company" type="text">
       <label for="jobDescription">Job Description</label>
       <input id="jobDescription" name="jobDescription" type="text">
       <label for="companyLocation">Company Location</label>
       <input id="companyLocation" name="companyLocation" type="text">
       <label for="startDate">Start Date</label>
       <input id="startDate" name="startDate" type="text">
       <label for="endDate">End Date</label>
       <input id="endDate" name="endDate" type="text">
   {{/if}}
       <button type="submit" class="btn btn-default">Go!</button>
   </form>
{{/partial}}

{{> layout.hbs}}